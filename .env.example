# Configuration SafeMates - EXEMPLE
# Copiez ce fichier en .env et remplissez avec vos vraies valeurs

# Base de données MySQL
DB_HOST=localhost
DB_NAME=votre_nom_base
DB_USER=votre_utilisateur
DB_PASS=votre_mot_de_passe_tres_securise

# Secrets JWT (générez des clés aléatoires fortes)
JWT_SECRET=generer_une_cle_aleatoire_tres_longue_et_securisee
SESSION_SECRET=generer_une_autre_cle_aleatoire_tres_longue_et_securisee

# Mot de passe installation (changez-le après installation)
INSTALL_PASSWORD=votre_mot_de_passe_installation_unique

# FTP Hostinger (pour déploiement)
FTP_USER=votre_user_ftp
FTP_PASS=votre_mot_de_passe_ftp
FTP_HOST=votre_serveur_ftp
